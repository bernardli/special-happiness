<%- include('blog-header') %>

<link rel="stylesheet" href="/css/blog.css">
<link rel="stylesheet" href="/css/blog-user-show.css">
<div class="pure-u-1 pure-u-md-3-4 content">       

    <div class="user-info">
        <div class="user-info-avatar">
            <div class="avatar-center">
                <img  alt="Eric Ferraiuolo&#x27;s avatar" class="img-info-avatar pure-img" src="/img/users_avatar/<%= author.avatar %>">
            </div>
        </div>
        <div class="user-info-namegender center">
            <span><%= author.name%></span>
            <span>|</span>
            <% if( author.gender == 'f') { %>
                <span>♀</span>
            <% } else if( author.gender == 'm') { %>
                <span>♂</span>
            <% } else {%>
                <span>性别保密哦~</span>
            <% } %>
        </div>
        <div class="user-info-bio">
            <p class="text-biotitle">关于我:</p>
            <% if(author.bio) { %>
                <p class="text-bio">
                    <%= author.bio%>
                </p>
            <% } else { %>
                <p class="text-bio">
                    改用户很懒，什么简介都没写
                </p>
            <% }　%>
        </div>
    </div>

    <!-- 已发布部分 -->   
    <div class="posts limit-post-content">
        <h1 class="content-subhead">最新文章</h1>
        <%- include('components/limit-posts', { posts: posts }) %>
    </div>
   
    <% if(posts.length == 0 && page == 1) { %>
        <div class="eight wide column">
            <div class="ui segment">
                该用户毛都没写/(ㄒoㄒ)/~~
            </div>
        </div>
    <% } else if (posts.length === 6){ %>
        <div class="menu-load">
            <div class="item-load center" id="loadmore_user">
                <span class="text-load">----- 你觉得再看几篇吼不吼啊o(￣ε￣*) -----</span>
            </div>
        </div>
    <% } else{ %>
        <div class="menu-load">
            <div class="item-load center" id="no_user">
                <span class="text-load">----- 人呐就是不知道 (っ*´Д`)っ 已经没有更多文章了 -----</span>
            </div>
        </div>
    <% } %>

<%- include('blog-footer') %>