<%- include('blog-header') %>

<form class="pure-form" method="get" action="/posts">
    <input type="text" name="search" class="pure-input-rounded">
    <button type="submit" class="pure-button" value="搜索">Search</button>
</form>

<%- include('components/top-posts', { tops: tops }) %>
<%- include('components/recent-posts', { posts: posts }) %>

<% if(posts.length==5){ %>
<div class="menu-load">
    <div class="item-load center" id="loadmore_posts">
        <span class="text-load">----- 点击获取人生经验 ヾ(≧O≦)〃吼不吼啊~ -----</span>
    </div>
</div>
<% } else { %>
<div class="menu-load">
    <div class="item-load center" id="no_posts">
        <span class="text-load">----- 没有文章了/(ㄒoㄒ)/~~ -----</span>
    </div>
</div>
<% } %>


